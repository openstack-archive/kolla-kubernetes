{
    "command": "ironic-conductor",
    "config_files": [
        {
            "source": "{{ container_config_directory }}/ironic.conf",
            "dest": "/etc/ironic/ironic.conf",
            "owner": "ironic",
            "perm": "0600"
        },
        {
            "source": "{{ container_config_directory }}/policy.json",
            "dest": "/etc/ironic/policy.json",
            "owner": "ironic",
            "perm": "0600",
            "optional": true
        }
    ],
    "permissions": [
        {
            "path": "/var/log/kolla/ironic",
            "owner": "ironic:ironic",
            "recurse": true
        },
        {
            "path": "/var/lib/ironic",
            "owner": "ironic:ironic",
            "recurse": true
        },
        {
            "path": "/tftpboot",
            "owner": "ironic:ironic",
            "recurse": true
        }
    ]
}
