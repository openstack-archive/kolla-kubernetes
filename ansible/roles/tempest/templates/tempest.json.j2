{
    "command": "sleep infinity",
    "config_files":[
        {
            "source": "{{ container_config_directory }}/tempest.conf",
            "dest": "/etc/tempest/tempest.conf",
            "owner": "root",
            "perm": "0600"
        },
        {
            "source": "{{ container_config_directory }}/policy.json",
            "dest": "/etc/tempest/policy.json",
            "owner": "tempest",
            "perm": "0600",
            "optional": true
        }
    ]
}
