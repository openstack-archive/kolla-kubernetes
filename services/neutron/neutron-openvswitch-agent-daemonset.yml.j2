apiVersion: extensions/v1beta1
kind: DaemonSet
metadata:
  name: neutron-openvswitch-agent
  labels:
    component: neutron
    system: openvswitch-agent
  namespace: default
spec:
  template:
    metadata:
      name: neutron-openvswitch-agent
      labels:
        component: neutron
        system: openvswitch-agent
      namespace: default
    spec:
      hostNetwork: True
      containers:
        - image: "{{ neutron_openvswitch_agent_image_full }}"
          name: neutron-openvswitch-agent
          command: [/bin/bash, -c]
          args:
          - |
            TUNNEL_INTERFACE={{ tunnel_interface }}
            F=/var/lib/kolla-kubernetes/neutron-openvswitch-agent/tunnel_interface
            [ -f $F ] && TUNNEL_INTERFACE=$(<$F)
            IP=$(ip addr list {{ tunnel_interface }} | grep 'inet ' |cut -d' ' -f6|cut -d/ -f1) &&
            (echo '[ovs]'; echo local_ip=$IP) >> /var/lib/kolla/config_files/ml2_conf.ini &&
            exec kolla_start
            #FIXME could be this instead here, or in init container: crudini --set /var/lib/kolla/config_files/ml2_conf.ini ovs local_ip $IP &&
          securityContext:
            privileged: true
          env:
            - name: KOLLA_CONFIG_STRATEGY
              value: {{ config_strategy }}
          volumeMounts:
            - mountPath: {{ container_config_directory }}
              name: neutron-openvswitch-agent-config
              readOnly: true
            - mountPath: /var/lib/kolla-kubernetes/neutron-openvswitch-agent
              name: openvswitch-config
              readOnly: true
            - mountPath: /run
              name: host-run
            - mountPath: /dev
              name: host-dev
            - mountPath: /etc/localtime
              name: host-etc-localtime
              readOnly: true
            - mountPath: /lib/modules
              name: host-lib-modules
              readOnly: true
            - mountPath: /var/log/kolla/
              name: kolla-logs

