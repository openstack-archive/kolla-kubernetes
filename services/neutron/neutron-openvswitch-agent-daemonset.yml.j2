          hostPath:
            path: /var/lib/kolla-kubernetes/neutron-openvswitch-agent
        - name: host-run
          hostPath:
            path: /var/run
        - name: host-dev
          hostPath:
            path: /dev
        - name: host-etc-localtime
          hostPath:
            path: /etc/localtime
        - name: host-lib-modules
          hostPath:
            path: /lib/modules
        - name: kolla-logs
          emptyDir: {}
