{%- set resourceName = kolla_kubernetes.cli.args.service_name %}

apiVersion: extensions/v1beta1
kind: DaemonSet
metadata:
  name: cinder-volume
  labels:
    component: cinder-volume
    system: cinder-volume
  namespace: default
spec:
  template:
    metadata:
      name: cinder-volume
      labels:
        component: cinder-volume
        system: cinder-volume
      namespace: default
      annotations:
        pod.alpha.kubernetes.io/init-containers: '[
          {
             "name": "initialize-cinder-volume",
             "image": "{{ kolla_toolbox_image_full }}",
             "command": [
                 "sh",
                 "-ce",
                 "cp -a /srv/configmap/..data/* /srv/pod-main-config/;
                  {% if cinder_backends is defined %}echo;
                     {% for backends in cinder_backends %}echo;
                        {% if 'lvm_backends' in backends %}echo;
                           {% for lvm_backend in backends %}echo;
                              {% for iscsi_targets in backends[lvm_backend] %}echo;
                                 {% for item in iscsi_targets %}echo;
                                    {% set vg_ip = iscsi_targets[item]['ip'] %}echo;
                                    {% set vg_name = iscsi_targets[item]['vg_name'] %}echo;
                                    {% set lvm_enabled_backend = (vg_ip + '_' + vg_name)|string %}echo;
                                       save_backend=$(crudini --get  /srv/pod-main-config/cinder.conf DEFAULT enabled_backends);
                                       part_1='''';
                                       part_2='''';
                                       if [ ! -z ''$save_backend'' ]; then part_1=$save_backend'',''; fi;
                                       part_2=''{{ lvm_enabled_backend }}'';
                                       resulting_backend=$part_1$part_2;
                                       crudini --set /srv/pod-main-config/cinder.conf DEFAULT enabled_backends $resulting_backend;
                                       crudini --set /srv/pod-main-config/cinder.conf {{ lvm_enabled_backend }} volume_group {{ vg_name }};
                                       crudini --set /srv/pod-main-config/cinder.conf {{ lvm_enabled_backend }} volume_backend_name {{ lvm_enabled_backend }};
                                       crudini --set /srv/pod-main-config/cinder.conf {{ lvm_enabled_backend }} volume_driver  ''cinder.volume.drivers.lvm.LVMVolumeDriver'';
                                       crudini --set /srv/pod-main-config/cinder.conf {{ lvm_enabled_backend }} iscsi_helper  ''tgtadm'';
                                       crudini --set /srv/pod-main-config/cinder.conf {{ lvm_enabled_backend }} iscsi_protocol  ''iscsi'';
                                       crudini --set /srv/pod-main-config/cinder.conf lvm-1 iscsi_ip_address {{ vg_ip }};
                                 {% endfor %}echo;
                              {% endfor %}echo;
                           {% endfor %}echo;
                        {% endif %}echo;
                     {% endfor %}echo;
                  {% endif %}echo; "],
             "volumeMounts": [
                {
                   "name": "cinder-volume-configmap",
                   "mountPath": "/srv/configmap"
                },
                {
                   "name": "pod-main-config",
                   "mountPath": "/srv/pod-main-config"
                }
             ]
          },
          {
             "name": "initialize-cinder-logs",
             "image": "{{ cinder_volume_image_full }}",
             "command": [
                 "sh",
                 "-ce",
                 "mkdir /var/log/kolla/cinder ;
                  chown -R cinder: /var/log/kolla/cinder "],
             "volumeMounts": [
                {
                   "name": "kolla-logs",
                   "mountPath": "/var/log/kolla"
                }
             ]
          }
        ]'
    spec:
      hostNetwork: True
      hostIPC: True
      nodeSelector:
          kolla_storage: "true"
      containers:
        - image: "{{ cinder_volume_image_full }}"
          name: cinder-volume
          securityContext:
            privileged: true
          env:
            - name: KOLLA_CONFIG_STRATEGY
              value: COPY_ALWAYS
          volumeMounts:
            - mountPath: {{ container_config_directory }}
              name: pod-main-config
              readOnly: true
            - mountPath: /run
              name: run
            - mountPath: /dev
              name: dev
            - mountPath: /var/lib/cinder
              name: cinder-volumes
            - mountPath: /etc/iscsi
              name: iscsi-info
            - mountPath: /etc/localtime
              name: host-etc-localtime
              readOnly: true
            - mountPath: /var/log/kolla/
              name: kolla-logs
      volumes:
        - name: kolla-kubernetes-events
          emptyDir: {}
        - name: pod-main-config
          emptyDir: {}
        - name: cinder-volume-configmap
          configMap:
            name: cinder-volume-configmap
        - name: run
          hostPath:
            path: /run
        - name: dev
          hostPath:
            path: /dev
        - name: cinder-volumes
          hostPath:
            path: /var/lib/cinder
        - name: iscsi-info
          hostPath:
            path: /etc/iscsi
        - name: host-etc-localtime
          hostPath:
            path: /etc/localtime
        - name: kolla-logs
          emptyDir: {}
