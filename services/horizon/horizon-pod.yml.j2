apiVersion: v1
kind: ReplicationController
spec:
  replicas: {{ keystone_replicas }}
  selector:
      service: horizon
  template:
    metadata:
      labels:
        service: horizon
    spec:
      containers:
        - name: horizon
          image: "{{ horizon_image_full }}"
          volumeMounts:
            - mountPath: {{ container_config_directory }}
              name: horizon-config
          env:
            - name: KOLLA_CONFIG_STRATEGY
              value: {{ config_strategy }}
          ports:
            - containerPort: 80
              name: http
            - containerPort: 443
              name: https
      volumes:
        - name: horizon-config
          configMap:
            name: horizon-config
metadata:
   name: horizon
