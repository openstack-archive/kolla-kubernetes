apiVersion: v1
kind: ReplicationController
spec:
  replicas: 1
  selector:
      service: memcached
  template:
    metadata:
      labels:
        service: memcached      
    spec:
      hostNetwork: True
      containers:
        - image: "{{ memcached_image_full }}"
          name: memcached
          volumeMounts:
            - mountPath: {{ container_config_directory }}
              name: memcached-config
          env:
            - name: KOLLA_CONFIG_STRATEGY
              value: {{ config_strategy }}
      volumes:
        - name: memcached-config
          configMap:
            name: memcached-configmap